                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="CPU4:"
                                android:textColor="@color/cpu4"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_freqCPU4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="freqCPU4"
                                android:textColor="@color/cpu4"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/tv_rateCPU4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="rateCPU4"
                                android:textColor="@color/cpu4"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="CPU5:"
                                android:textColor="@color/cpu5"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_freqCPU5"
                                android:layout_width="wrap_content"
